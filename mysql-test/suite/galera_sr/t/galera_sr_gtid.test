--source include/have_log_bin.inc
--source include/galera_cluster.inc

CREATE TABLE t1 (f1 INT PRIMARY KEY);

SET SESSION wsrep_trx_fragment_size=1;
INSERT INTO t1 VALUES (1);

--connection node_2
--echo #node-2
SELECT COUNT(*) = 1 FROM t1;

SET SESSION wsrep_trx_fragment_size=1;
UPDATE t1 SET f1 = 2;

--let $gtid_executed_node2 = `SELECT @@global.gtid_executed;`

--connection node_1
--echo #node-1
SET SESSION wsrep_trx_fragment_size=0;

--connection node_2
--echo #node-2
SET SESSION wsrep_trx_fragment_size=0;

--connection node_1
--echo #node-1
SELECT COUNT(*) = 1 FROM t1 WHERE f1 = 2;

--disable_query_log
--eval SELECT '$gtid_executed_node2' = @@global.gtid_executed AS gtid_executed_equal;
--enable_query_log

--replace_regex /xid=[0-9]+/xid=###/ /table_id: [0-9]+/table_id: ###/
SHOW BINLOG EVENTS IN 'mysqld-bin.000002' FROM 124;

--connection node_2
--echo #node-2
# Perform causal wait
SELECT 1 FROM DUAL;
--replace_regex /xid=[0-9]+/xid=###/ /table_id: [0-9]+/table_id: ###/
SHOW BINLOG EVENTS IN 'mysqld-bin.000004' FROM 124;

DROP TABLE t1;
