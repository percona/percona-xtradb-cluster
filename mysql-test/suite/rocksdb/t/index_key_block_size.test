# KEY_BLOCK_SIZE index option.
#

CREATE TABLE t1 (a INT,
  b CHAR(8),
  pk INT PRIMARY KEY,
  KEY (a) KEY_BLOCK_SIZE=8
) ENGINE=ROCKSDB;

--replace_column 7 #
SHOW KEYS IN t1;
DROP TABLE t1;

