#-------------------------------------------------------------------------------
#
# Try to execute
# - FLUSH TABLE <table> WITH READ LOCK
# - FLUSH TABLE <table> WITH READ LOCK
# - LOCK TABLE <table> WRITE/READ
# with FTWRL


--connection node_1
--echo #node-1
CREATE TABLE t1 (f1 INTEGER) Engine=InnoDB;
# desync and pause the cluster.
FLUSH TABLE WITH READ LOCK;

--connect node_1a, 127.0.0.1, root, , test, $NODE_MYPORT_1
--connection node_1a
--echo #node-1a
# will be blocked in pause operation local monitor
--send FLUSH TABLE t1 WITH READ LOCK;

--connection node_1
--echo #node-1
# will resync the node but will not resume it.
UNLOCK TABLES;
SELECT * FROM t1;

--connection node_2
--echo #node-2
INSERT INTO t1 values (100);

--connection node_1a
--echo #node-1a
--reap
UNLOCK TABLES;
--sleep 4
SELECT * FROM t1;
DROP TABLE t1;
