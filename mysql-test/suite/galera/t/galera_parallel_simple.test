#
# Test that SHOW PROCESSLIST reports that two slave threads have been involved in applying
# two independent transactions
#

--source include/galera_cluster.inc

--let $wsrep_applier_threads_orig = `SELECT @@wsrep_applier_threads`

CREATE TABLE t1 (id INT) ENGINE=InnoDB;
CREATE TABLE t2 (id INT) ENGINE=InnoDB;

--connection node_2
SET GLOBAL wsrep_applier_threads = 2;
LOCK TABLE t1 WRITE;

--connection node_1
INSERT INTO t1 VALUES (1);
INSERT INTO t2 VALUES (1);

INSERT INTO t1 VALUES (1);
INSERT INTO t2 VALUES (1);

INSERT INTO t1 VALUES (1);
INSERT INTO t2 VALUES (1);

INSERT INTO t1 VALUES (1);
INSERT INTO t2 VALUES (1);

INSERT INTO t1 VALUES (1);
INSERT INTO t2 VALUES (1);

INSERT INTO t1 VALUES (1);
INSERT INTO t2 VALUES (1);

--connection node_2
SET SESSION wsrep_sync_wait = 0;

--let $wait_condition = SELECT COUNT(*) = 1 FROM performance_schema.processlist WHERE STATE LIKE 'Waiting for table metadata lock%';
--source include/wait_condition.inc

--let $wait_condition = SELECT COUNT(*) = 1 FROM performance_schema.processlist WHERE STATE LIKE 'wsrep: replicating and certifying write set';
--source include/wait_condition.inc

UNLOCK TABLES;

SET SESSION wsrep_sync_wait = 15;

SELECT COUNT(*) = 6 FROM t1;
SELECT COUNT(*) = 6 FROM t2;

--eval SET GLOBAL wsrep_applier_threads = $wsrep_applier_threads_orig;

DROP TABLE t1;
DROP TABLE t2;
