#
# LP:1435482  enforce_storage_engine=Innodb not compatible with wsrep_replicate_myisam 
#

--source include/galera_cluster.inc

--connection node_1

--echo # default
SELECT @@global.wsrep_replicate_myisam;
SELECT @@session.wsrep_replicate_myisam;

--echo # Create MyISAM table which should be replicated due to enforce_storage_engine.
CREATE TABLE t1 (f1 INTEGER PRIMARY KEY) ENGINE=MyISAM;

--echo # The next step should crash it without the fix
INSERT INTO t1 values (1);

--connection node_2

--echo # The table should exist and be InnoDB.
SHOW CREATE TABLE t1;

--echo # Values should be replicated
SELECT * from t1;

--echo # Make sure enforce_storage_engine works without any engine and InnoDB.
--connection node_1
CREATE TABLE t2 (f1 INTEGER PRIMARY KEY) ENGINE=InnoDB;
CREATE TABLE t3 (f1 INTEGER PRIMARY KEY);
INSERT INTO t2 values (1);
INSERT INTO t3 values (1);

--connection node_2

--echo # The tables should exist.
SHOW CREATE TABLE t2;
SHOW CREATE TABLE t3;

--echo # Values should be replicated
SELECT * from t2;
SELECT * from t3;

--echo # Make sure wsrep_replicate_myisam doesn't interfere
--connection node_1
SET @@session.wsrep_replicate_myisam = ON;

CREATE TABLE t4 (f1 INTEGER PRIMARY KEY) ENGINE=MyISAM;
CREATE TABLE t5 (f1 INTEGER PRIMARY KEY) ENGINE=InnoDB;
CREATE TABLE t6 (f1 INTEGER PRIMARY KEY);
INSERT INTO t4 values (1);
INSERT INTO t5 values (1);
INSERT INTO t6 values (1);

--connection node_2

--echo # The table should exist and be InnoDB.
SHOW CREATE TABLE t4;
SHOW CREATE TABLE t5;
SHOW CREATE TABLE t6;

--echo # Values should be replicated
SELECT * from t4;
SELECT * from t5;
SELECT * from t6;

--connection node_1
DROP TABLE t1, t2, t3, t4, t5, t6;

--echo # End of test
