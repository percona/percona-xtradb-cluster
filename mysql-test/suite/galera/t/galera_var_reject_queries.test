#
# Test wsrep_reject_queries
#

--source include/galera_cluster.inc
--source include/have_innodb.inc

CREATE TABLE t1 (f1 INTEGER);

--connect node_1a, 127.0.0.1, root, , test, $NODE_MYPORT_1

--connection node_1a
SELECT * FROM t1;

--connection node_1
--error ER_GLOBAL_VARIABLE
SET SESSION wsrep_reject_queries = ALL;

SET GLOBAL wsrep_reject_queries = ALL;

--error ER_UNKNOWN_COM_ERROR
SELECT * FROM t1;

SET GLOBAL wsrep_reject_queries = ALL_KILL;

--connection node_1a
--sleep 10
--error 2013
SELECT * FROM t1;

--connect node_1b, 127.0.0.1, root, , test, $NODE_MYPORT_1
--error ER_UNKNOWN_COM_ERROR
SELECT * FROM t1;

# Confirm that replication continues

--connection node_2
SELECT VARIABLE_VALUE = 2 FROM performance_schema.global_status WHERE VARIABLE_NAME = 'wsrep_cluster_size';
INSERT INTO t1 VALUES (1);

--connect node_1c, 127.0.0.1, root, , test, $NODE_MYPORT_1
SET GLOBAL wsrep_reject_queries = NONE;

SELECT COUNT(*) = 1 FROM t1;

# PXC-3165 - Allow COM_FIELD_LIST to be executed when WSREP is not ready
--connection node_2
SET GLOBAL wsrep_reject_queries = ALL;
--exec $MYSQL_SHOW -P $NODE_MYPORT_1 test t1;
SET GLOBAL wsrep_reject_queries = NONE;

DROP TABLE t1;
