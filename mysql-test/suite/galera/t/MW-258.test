#
# Test Lock table interaction with RSU
--source include/galera_cluster.inc
--source include/have_debug_sync.inc
--source suite/galera/include/galera_have_debug_sync.inc

--connection node_1
CREATE TABLE t1 (f1 INTEGER);
LOCK TABLE t1 WRITE;
--echo value prior to RSU:
SHOW STATUS LIKE 'wsrep_desync_count';
SHOW VARIABLES LIKE 'wsrep_desync';

--connect node_1a, 127.0.0.1, root, , test, $NODE_MYPORT_1
--connection node_1a
SET SESSION wsrep_sync_wait = 0;
SET SESSION wsrep_osu_method = RSU;

--let $galera_sync_point = wsrep_desync_left_local_monitor
--source include/galera_set_sync_point.inc

--send ALTER TABLE t1 ADD COLUMN f2 INTEGER;

--connect node_1b, 127.0.0.1, root, , test, $NODE_MYPORT_1
--connection node_1b
SET SESSION wsrep_sync_wait = 0;
SET SESSION wsrep_osu_method = RSU;
--send ALTER TABLE t1 ADD COLUMN f3 INTEGER;

--sleep 5
--connection node_1
--echo value during RSU:
SHOW STATUS LIKE 'wsrep_desync_count';
SHOW VARIABLES LIKE 'wsrep_desync';
UNLOCK TABLES;

--connect node_1c, 127.0.0.1, root, , test, $NODE_MYPORT_1

--source include/galera_signal_sync_point.inc
--source include/galera_clear_sync_point.inc

--connection node_1a
--reap
--connection node_1b
--reap

--connection node_1

--let $wait_condition = SELECT VARIABLE_VALUE = 0 FROM performance_schema.global_status WHERE VARIABLE_NAME = 'wsrep_desync_count'
--source include/wait_condition.inc

--echo value after RSU:
SHOW STATUS LIKE 'wsrep_desync_count';
SHOW VARIABLES LIKE 'wsrep_desync';
SET GLOBAL wsrep_desync=0;

DROP TABLE t1;
